<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>
<body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Niki's Bookshelf" %>
  </div>
  <div id="columns">
    <div id="side">
	  <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
        <%= render @cart %>
      <% end %>
      <ul>
        <li><a href="http://strong-ice-8400.herokuapp.com/">Home</a></li>
        <li><a href="http://www.google.com">Questions</a></li>
        <li><a href="http://www.20min.ch">News</a></li>
        <li><a href="http://www.facebook.com">Contact</a></li>
      </ul>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>